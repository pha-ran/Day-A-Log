<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Day_A_Log" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/base</item>
        <!-- Customize your theme here. -->
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <!-- Title style -->
    <style name="ToolbarTitleText">
        <item name="android:fontFamily">@font/magneto_bold_a</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4c4c4c</item>
    </style>

    <!-- Login Fragment TextInputLayout ID Style -->
    <style name="IdDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/IdThemeOverlayOutlinedDense</item>
    </style>
    <style name="IdThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/TextInputLayout_id_outlinedBox_dense_h
        </item>
    </style>
    <style name="TextInputLayout_id_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Login Fragment TextInputLayout PW Style -->
    <style name="PwDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/PwThemeOverlayOutlinedDense</item>
    </style>
    <style name="PwThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/TextInputLayout_pw_outlinedBox_dense_h
        </item>
    </style>
    <style name="TextInputLayout_pw_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Toolbar Icon style -->
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">36dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">36dp</item>
    </style>

</resources>