<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="64dp"
    android:orientation="vertical"
    tools:context=".src.login.LoginFragment">

    <!--ToDo-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="로그인"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#3d3d3d"
        android:lineSpacingExtra="8sp" />

    <!--ToDo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="처음이신가요?" />

        <TextView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="회원 가입하기"
            android:textColor="@color/base"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Id / Email / Phone number"
            android:fontFamily="sans-serif-light"/>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Password"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="로그인"
        android:fontFamily="sans-serif-light" />

    <!--ToDo-->
    <TextView
        android:id="@+id/imageView5"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:gravity="center_vertical|right"
        tools:text="이메일과 비밀번호를 잊었나요?"
        android:textSize="10sp"
        android:textColor="@color/base" />

    <TextView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_activity_login_boundary_line"
        android:backgroundTint="#e2e2e2"
        android:text="OR"
        android:textSize="10sp"
        android:textColor="#e2e2e2"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/kakao_login_medium_wide" />

</LinearLayout>